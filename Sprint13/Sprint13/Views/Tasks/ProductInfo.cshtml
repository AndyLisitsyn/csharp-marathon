@using Sprint13.Models

@{
    ViewData["Title"] = "Information about product";
}
<h1>@ViewData["Title"]</h1>

@{ 
    List<Product> listPorducts= new List<Product>()
    {
        new Product("Bread",10),
        new Product("Milk",11),
        new Product("Cheese",140),
        new Product("Sausage",110),
        new Product("Potato",7),
        new Product("Banana",23),
        new Product("Tomato",25),
        new Product("Candy",75)
    };
}

<table>
    <tbody>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
        @foreach (var item in listPorducts)
         {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
         }
    </tbody>
 </table>